{% form_theme form 'ManagerBundle:layout:form-theme.html.twig' %}

<!-- Horizontal Form -->
<div class="box {% if boxtype %}box-{{ boxtype|default('info') }}{% endif %}">
    <div class="box-header with-border">
        <h3 class="box-title">{{ block('box_title') }}</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        <div class="box-body">
            {{ form_widget(form) }}
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <a href="{{ cancelurl|default('#') }}" class="btn btn-default">Cancel</a>
            <button type="submit" class="btn btn-{{ boxtype|default('info') }} pull-right">
                <i class="fa fa-check-square"></i> {{ submittype|default('Submit') }}
            </button>
        </div>
        <!-- /.box-footer -->
    {{ form_end(form) }}
</div>