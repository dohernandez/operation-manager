{% extends 'ManagerBundle:Layout:edit.form.html.twig' %}

{% block avanzu_javascripts_inline %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $('#managerbundle_product_symbol').change(function () {
                if ($(this).val()) {
                    $('#managerbundle_product_alias').prop('placeholder', $(this).val())
                } else {
                    $('#managerbundle_product_alias').prop('placeholder', 'Enter alias')
                }
            });
        });
    </script>
{% endblock %}