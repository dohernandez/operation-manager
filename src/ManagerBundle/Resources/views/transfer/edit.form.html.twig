{% extends 'ManagerBundle:Form:edit.form.html.twig' %}

{% block avanzu_head %}
    {{ parent() }}
    {% include 'ManagerBundle:Form:_header-datepicker-form.html.twig' %}
{% endblock %}

{% block avanzu_javascripts_inline %}
    {{ parent() }}
    {% include 'ManagerBundle:Form:_scripts-datepicker-form.html.twig' %}
    <script>
        $(document).ready(function () {
            $('[data-datepickerenable="on"]').datepicker({
                showOn: 'button',
                buttonImageOnly: true,
                changeMonth: true,
                changeYear: true,
                dateFormat: 'dd/mm/yyyy',
                yearRange: "-0:+1",
                autoclose: true
            });
        });
    </script>
{% endblock %}