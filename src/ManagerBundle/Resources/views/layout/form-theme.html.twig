{% extends 'AvanzuAdminThemeBundle:layout:form-theme.html.twig' %}

{% block form_label %}
    {% block avanzu_head %}
        <style>
            sup {
                top: -.9em;
                font-size: 50%;
            }
        </style>
    {% endblock %}

    <div class="col-sm-3">
        {{ parent() }}
    </div>
{% endblock form_label %}

{% block form_widget_simple %}
    <div class="col-sm-9">
        {{ parent() }}

        {% if help is defined %}
            <p class="help-block">{{ help }}</p>
        {% endif %}
    </div>
{% endblock %}
