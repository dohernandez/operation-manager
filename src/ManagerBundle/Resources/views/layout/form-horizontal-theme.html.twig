{% extends 'AvanzuAdminThemeBundle:layout:form-theme.html.twig' %}

{% block form_label %}
    <div class="col-sm-3">
        {{ parent() }}
    </div>
{% endblock form_label %}

{% block form_widget_simple %}
    <div class="col-sm-9">
        {{ parent() }}

        {% if help is defined %}
            <p class="help-block">{{ help }}</p>
        {% endif %}
    </div>
{% endblock %}

{%- block textarea_widget -%}
    <div class="col-sm-9">
        {{ parent() }}
    </div>
{%- endblock textarea_widget -%}

{%- block choice_widget -%}
    <div class="col-sm-9">
        {{ parent() }}
    </div>
{%- endblock choice_widget -%}
